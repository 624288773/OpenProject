<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/main_drawlayout">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/main_root">
        <include
                android:id="@+id/main_title"
                layout="@layout/layout_top"/>
        <com.scwang.smartrefresh.layout.SmartRefreshLayout
                android:id="@+id/main_refresh"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/color_ffffff">
                <android.support.v4.view.ViewPager
                        android:id="@+id/main_viewPager"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_150"/>
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:id="@+id/main_indicator_layout"
                        android:gravity="center"
                        android:layout_alignBottom="@id/main_viewPager"/>

                <android.support.v7.widget.RecyclerView
                        android:id="@+id/main_category"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/main_viewPager"
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_centerHorizontal="true"/>

                <android.support.v7.widget.RecyclerView
                        android:id="@+id/main_other"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/main_category"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_marginRight="@dimen/dp_15"/>
            </RelativeLayout>
        </com.scwang.smartrefresh.layout.SmartRefreshLayout>
    </LinearLayout>
    <include
            android:layout_width="@dimen/dp_300"
            android:layout_height="match_parent"
            layout="@layout/layout_left"
            android:layout_gravity="start"
            android:id="@+id/main_drawlayout_left"/>
</android.support.v4.widget.DrawerLayout>